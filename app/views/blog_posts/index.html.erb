<h1> Blog Post </h1>

<div>
  <% @blog_posts.each do |blog_post| %>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <% if blog_post.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <%elsif blog_post.schdeuled? %>
      <div class="p-2 rounded bg-blue-100 text-blue-900">Schdeuled</div>
    <% end %>
    <%= blog_post.body %>
  <% end %>
</div>